<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    tools:context=".activities.CameraActivity">

    <include layout="@layout/camera_layout" />

    <ImageView
        android:id="@+id/camera_binocular_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/binocular_mask"
        android:visibility="gone"
        />

    <include layout="@layout/peak_info_layout" />

    <include layout="@layout/reticule_layout" />

    <TextView
        android:id="@+id/debug_camera_tv"
        style="@style/DebugTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textColor="#ffffffff"
        />

    <fr.marin.cyril.belvedere.views.CompassView
        android:id="@+id/camera_compass_view"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="bottom"
        android:background="#80000000" />

</FrameLayout>
