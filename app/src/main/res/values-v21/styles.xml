<resources>

    <style name="MainTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="actionBarStyle">@style/MainTheme.ActionBar.Transparent</item>
        <item name="android:actionBarStyle">@style/MainTheme.ActionBar.Transparent</item>
    </style>

    <style name="MainTheme.ActionBar.Transparent" parent="MainTheme">
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="android:Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="android:textColor">@color/loading_text</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor">@color/wallet_bright_foreground_holo_dark</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

</resources>
