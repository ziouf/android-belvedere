<resources>

    <style name="AppTheme.Main.Compat">
        <!-- Statusbar -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Toolbar -->
        <item name="toolbarStyle">@style/AppTheme.Main.ActionBar</item>
        <item name="android:toolbarStyle">@style/AppTheme.Main.ActionBar</item>
    </style>

    <style name="AppTheme.Main.ActionBar">
        <item name="android:elevation">5dp</item>

        <item name="background">@drawable/actionbar_layers</item>
        <item name="android:background">@drawable/actionbar_layers</item>
    </style>

    <style name="AppTheme.FloatingActionButton.Location">
        <item name="android:src">@android:drawable/ic_menu_mylocation</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:backgroundTint">@android:color/background_light</item>
    </style>

    <style name="AppTheme.Splash.Compat">
        <item name="android:navigationBarColor">@android:color/background_light</item>
    </style>

</resources>
