<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme.Main">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentOverlay">@null</item>

        <!-- Statusbar -->
        <item name="android:windowTranslucentStatus">@bool/translucentStatusBar</item>
        <item name="android:windowTranslucentNavigation">@bool/translucentNavBar</item>

        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="AppTheme.Main.Compat" />

    <style name="AppTheme.Main.ActionBar">

        <!-- Toolbar -->
        <item name="background">@drawable/actionbar_layers</item>
        <item name="android:background">@drawable/actionbar_layers</item>

    </style>

    <style name="AppTheme.Main.ActionBar.Transparent">
        <item name="background">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Camera" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="AppTheme.Camera.Compat" />

    <style name="AppTheme.Splash" parent="android:Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="android:textColor">@color/loading_text</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowTranslucentNavigation">@bool/translucentNavBar</item>
    </style>

    <style name="AppTheme.Splash.Compat" />

    <style name="AppTheme.Debug">
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginStart">@dimen/fab_margin_left</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin_right</item>
        <item name="android:layout_marginLeft">@dimen/fab_margin_left</item>
        <item name="android:layout_marginRight">@dimen/fab_margin_right</item>
        <item name="android:layout_marginTop">@dimen/fab_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_bottom</item>

        <item name="android:background">@color/background_black</item>
    </style>

    <style name="AppTheme.FloatingActionButton.Location">
        <item name="android:src">@android:drawable/ic_menu_mylocation</item>
        <item name="android:background">@android:color/background_light</item>
        <!--<item name="app:backgroundTint">@android:color/background_light</item>-->
    </style>

    <style name="AppTheme.FloatingActionButton.Camera">
        <item name="android:src">@drawable/ic_camera</item>
    </style>

    <style name="AppTheme.FloatingActionButton.Compat" />

</resources>
