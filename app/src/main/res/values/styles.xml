<resources>

    <!-- Base application theme. -->
    <style name="MapsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Statusbar -->
        <item name="android:windowTranslucentStatus">@bool/translucentStatusBar</item>
        <item name="android:windowTranslucentNavigation">@bool/translucentNavBar</item>
    </style>

    <style name="MapsTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CameraTheme" parent="android:Theme.DeviceDefault.NoActionBar.Fullscreen">

    </style>

    <style name="SplashTheme" parent="android:Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="android:textColor">@color/loading_text</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="DebugTheme">
        <item name="android:visibility">gone</item>
    </style>

</resources>
